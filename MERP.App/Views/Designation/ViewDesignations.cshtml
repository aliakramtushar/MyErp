@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <table id="tblDesignations" class="easyui-datagrid" style="width:100%"
           data-options="
    rownumbers:true,
    singleSelect:true,
    collapsible:false,
    toolbar:'#toolbar'">
        <thead>
            <tr>
                <th data-options="field:'DesignationName', width:300, align:'left'">Designation Name</th>
                <th data-options="field:'ActivityStatusSt', width:150, align:'center'">Status</th>
                <th data-options="field:'Remarks', width:150, align:'center'">Remarks</th>
            </tr>
        </thead>
    </table>
    <div id="toolbar">
        <div class="easyui-panel" style="width:100%">
            <input type="text" id="txtSearch" class="form-control-sm MSearchBox" placeholder="Type and Enter">
            <a id="btnAdd" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-add'">New</a>
            <a id="btnEdit" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-edit'">Edit</a>
            <a id="btnDelete" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-remove'">Delete</a>
        </div>
    </div>
</div>
<script type="text/javascript">
    var _oDesignations = [];
    $(document).ready(function () {
        debugger;
        _oDesignations = @Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(ViewBag.Designations));
        MLoadDataGrid('tblDesignations', _oDesignations, 'Designation List');
        SetPageHeader('Designation Setup');
    });
    $('#btnAdd').click(function (e) {
        MAdd('tblDesignations', 'Designation', 'ViewDesignation');
    });
    $('#btnEdit').click(function (e) {
        MEdit('tblDesignations', 'Designation', 'ViewDesignation');
    })
    $("#btnDelete").click(function () {
        MDelete('tblDesignations', 'Designation', 'Delete');
    });
    $("#txtSearch").keyup(function (e) {
        debugger;
        if (e.keyCode == 13) {
            MSearch('tblDesignations', 'txtSearch', 'Designation', 'Search');     // only for Enter Press
        }
    });
</script>






